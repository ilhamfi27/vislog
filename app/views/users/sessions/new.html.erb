<div class="container-fluid sign-in-wrapper">
  <div class="sign-in">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12 sign-in-1">
      <%= image_tag 'icon/monitor.png', class: 'img-responsive' %>
        <h2>vislog</h2>
        <h3>
          Integrated TV Analysis & Monitoring Tools
        </h3>
        <p>
          Please insert your<br>
          Username and Password<br>
          for Sign In to Vislog Application
        </p>
        <h6>
          &copy; 2017 | Cipta Global Integral
        </h6>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12 bg-white sign-in-2">
        <h3 class="text-transform-uppercase color-dark-blue">sign in</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :login %>
            <%= f.text_field :login, class: 'form-control', autofocus: true %>
          </div>
          <div class="form-group" style="margin-top: 20px">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>
          <%= f.submit "Log in", class: 'btn btn-default btn-dasar bg-dark-blue color-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
